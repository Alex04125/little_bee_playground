    <!-- Scripts -->
    <script>
        // Bee animation
        const beeAnimation = document.getElementById("beeAnimation");
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const leftBee = beeAnimation.querySelector('.buzz-left');
                const rightBee = beeAnimation.querySelector('.buzz-right');
                if (entry.isIntersecting) {
                    leftBee.classList.remove("animate");
                    rightBee.classList.remove("animate");
                    void leftBee.offsetWidth;
                    void rightBee.offsetWidth;
                    leftBee.classList.add("animate");
                    rightBee.classList.add("animate");
                }
            });
        }, { threshold: 0.5 });
        observer.observe(beeAnimation);

        // Navbar scroll hide
        let lastScrollY = window.scrollY;
        const header = document.getElementById("mainHeader");
        window.addEventListener("scroll", () => {
            const currentScroll = window.scrollY;
            if (currentScroll > lastScrollY && currentScroll > 50) {
                header.classList.add("hide-navbar");
            } else {
                header.classList.remove("hide-navbar");
            }
            lastScrollY = currentScroll;
        });
    </script>

