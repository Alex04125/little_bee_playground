    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&family=Fredoka:wght@500&display=swap"
        rel="stylesheet" />
    <style>
        :root {
            --bee-yellow: #E4C45B;
            --bee-charcoal: #2C2B28;
            --bee-sage: #8A9C84;
            --bee-bg: #FFF9E5;
        }

        .club-name {
            font-family: 'Comic Neue', cursive;
        }

        .nav-link {
            font-family: 'Fredoka', sans-serif;
        }

        .buzz-left,
        .buzz-right {
            animation-duration: 3s;
            animation-fill-mode: both;
        }

        .buzz-left.animate {
            animation-name: buzz-left;
        }

        .buzz-right.animate {
            animation-name: buzz-right;
        }

        @keyframes buzz-left {
            0% {
                transform: translateX(-150%) rotate(0deg);
                opacity: 0;
            }

            50% {
                opacity: 1;
            }

            100% {
                transform: translateX(0) rotate(10deg);
                opacity: 1;
            }
        }

        @keyframes buzz-right {
            0% {
                transform: translateX(150%) rotate(0deg);
                opacity: 0;
            }

            50% {
                opacity: 1;
            }

            100% {
                transform: translateX(0) rotate(-10deg);
                opacity: 1;
            }
        }

        .bee-animation {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3.5rem;
            transition: opacity 1s ease;
        }

        header {
            transition: transform 0.3s ease-in-out;
        }

        .hide-navbar {
            transform: translateY(-100%);
        }
    </style>
</head>

